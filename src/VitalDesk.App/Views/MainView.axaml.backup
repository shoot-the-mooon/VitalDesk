<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:VitalDesk.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VitalDesk.App.Views.MainView"
             x:DataType="vm:MainViewModel">

  <Design.DataContext>
    <vm:MainViewModel/>
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*">
    
    <!-- Header -->
    <Border Grid.Row="0" Background="{DynamicResource SystemAccentColor}" Padding="16">
      <Grid ColumnDefinitions="*,Auto">
        <TextBlock Grid.Column="0" 
                   Text="バイタルサイン管理システム" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center"/>
        
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
          <TextBox Text="{Binding SearchText}" 
                   Watermark="患者を検索..."
                   Width="200"
                   VerticalAlignment="Center"/>
          
          <Button Content="サンプルデータ生成" 
                  Command="{Binding GenerateSampleDataCommand}"
                  IsEnabled="{Binding !IsLoading}"
                  VerticalAlignment="Center"
                  ToolTip.Tip="100人の患者データとバイタルサインデータを生成します"/>
          
          <Button Content="患者追加" 
                  Command="{Binding AddPatientCommand}"
                  Classes="accent"
                  VerticalAlignment="Center"/>
        </StackPanel>
      </Grid>
    </Border>

    <!-- Content -->
    <Grid Grid.Row="1" Margin="16">
      <!-- 患者リスト画面 -->
      <Grid IsVisible="{Binding !ShowSettings}">
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <!-- Patients DataGrid -->
      <DataGrid Grid.Row="0"
                ItemsSource="{Binding Patients}"
                SelectedItem="{Binding SelectedPatient}"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column">
        
        <DataGrid.Columns>
          <DataGridTextColumn Header="国保" 
                              Binding="{Binding NationalHealthInsurance}" 
                              Width="100"/>
          
          <DataGridTextColumn Header="記号" 
                              Binding="{Binding Symbol}" 
                              Width="80"/>
          
          <DataGridTextColumn Header="番号" 
                              Binding="{Binding Number}" 
                              Width="80"/>
          
          <DataGridTextColumn Header="保険者名" 
                              Binding="{Binding InsurerName}" 
                              Width="120"/>
          
          <DataGridTextColumn Header="患者名" 
                              Binding="{Binding Name}" 
                              Width="120"/>
          
          <DataGridTextColumn Header="フリガナ" 
                              Binding="{Binding Furigana}" 
                              Width="120"/>
          
          <DataGridTextColumn Header="年齢" 
                              Binding="{Binding Age}" 
                              Width="60"/>
          
          <DataGridTextColumn Header="入院日" 
                              Binding="{Binding Admission, StringFormat=yyyy/MM/dd}" 
                              Width="100"/>
          
            <DataGridTemplateColumn Header="操作" Width="300">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <Button Content="詳細" 
                          Command="{Binding $parent[DataGrid].((vm:MainViewModel)DataContext).ViewPatientDetailsCommand}"
                          CommandParameter="{Binding}"
                          Classes="accent"
                          FontSize="12"
                          Padding="8,4"/>
                  
                  <Button Content="編集" 
                          Command="{Binding $parent[DataGrid].((vm:MainViewModel)DataContext).EditPatientCommand}"
                          CommandParameter="{Binding}"
                          FontSize="12"
                          Padding="8,4"/>
                  
                    <Button Content="退院" 
                            Command="{Binding $parent[DataGrid].((vm:MainViewModel)DataContext).DischargePatientCommand}"
                            CommandParameter="{Binding}"
                            Background="Green"
                            Foreground="White"
                            FontSize="12"
                            Padding="8,4"/>
                    
                    <Button Content="転棟" 
                            Command="{Binding $parent[DataGrid].((vm:MainViewModel)DataContext).TransferPatientCommand}"
                            CommandParameter="{Binding}"
                            Background="Orange"
                            Foreground="White"
                          FontSize="12"
                          Padding="8,4"/>
                  
                  <Button Content="削除" 
                          Command="{Binding $parent[DataGrid].((vm:MainViewModel)DataContext).DeletePatientCommand}"
                          CommandParameter="{Binding}"
                          Classes="danger"
                          FontSize="12"
                          Padding="8,4"/>
                </StackPanel>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>
        </DataGrid.Columns>
      </DataGrid>

      <!-- Status bar -->
      <Border Grid.Row="1" 
              Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
              Padding="8"
              Margin="0,8,0,0">
        <StackPanel Orientation="Horizontal" Spacing="4">
            <TextBlock Text="入院患者数："
                     FontSize="12"
                     FontFamily="{StaticResource JapaneseUIFont}"
                     Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                     VerticalAlignment="Center"/>
          <TextBlock Text="{Binding Patients.Count}"
                     FontSize="12"
                     FontFamily="{StaticResource MonospaceFont}"
                     FontWeight="SemiBold"
                     Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                     VerticalAlignment="Center"
                     Margin="0,5.5,0,0"/>
          <TextBlock Text="人"
                     FontSize="12"
                     FontFamily="{StaticResource JapaneseUIFont}"
                     Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                     VerticalAlignment="Center"/>
          </StackPanel>
        </Border>
      </Grid>

      <!-- 設定画面 -->
      <Grid IsVisible="{Binding ShowSettings}">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 設定画面ヘッダー -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemAccentColor}"
                Padding="16"
                Margin="0,0,0,16">
          <Grid ColumnDefinitions="*,Auto">
            <TextBlock Grid.Column="0" 
                       Text="設定" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
            
            <Button Grid.Column="1"
                    Content="戻る"
                    Command="{Binding CloseSettingsCommand}"
                    Background="White"
                    Foreground="{DynamicResource SystemAccentColor}"
                    Padding="16,8"
                    FontWeight="SemiBold"/>
          </Grid>
        </Border>
        
        <!-- 設定画面コンテンツ -->
        <ScrollViewer Grid.Row="1" Padding="24">
          <StackPanel Spacing="24" MaxWidth="700">
            
            <!-- バックアップ・データ管理セクション -->
            <ui:SettingsExpander Header="バックアップ・データ管理"
                                 Description="データのバックアップと復元、エクスポート機能を管理します">
              
              <ui:SettingsExpander.IconSource>
                <ui:SymbolIconSource Symbol="People"/>
              </ui:SettingsExpander.IconSource>
              
              <ui:SettingsExpanderItem Content="バックアップを作成"
                                       Description="現在のデータベースの完全なバックアップを作成します。患者データとバイタルサインデータが含まれます。">
                <ui:SettingsExpanderItem.Footer>
                  <Button Content="今すぐバックアップ"
                          Command="{Binding CreateBackupCommand}"
                          IsEnabled="{Binding !IsLoading}"/>
                </ui:SettingsExpanderItem.Footer>
              </ui:SettingsExpanderItem>
              
            </ui:SettingsExpander>

            <!-- データエクスポートセクション -->
            <ui:SettingsExpander Header="データエクスポート"
                                 Description="患者データやバイタルサインデータをCSVファイルに出力します">
              
              <ui:SettingsExpander.IconSource>
                <ui:SymbolIconSource Symbol="Share"/>
              </ui:SettingsExpander.IconSource>
              
              <ui:SettingsExpanderItem Content="患者データをエクスポート"
                                       Description="すべての患者の基本情報（名前、コード、生年月日など）をCSVファイルに出力します。Excel等で開けます。">
                <ui:SettingsExpanderItem.Footer>
                  <Button Content="CSVにエクスポート"
                          Command="{Binding ExportPatientsCommand}"
                          IsEnabled="{Binding !IsLoading}"/>
                </ui:SettingsExpanderItem.Footer>
              </ui:SettingsExpanderItem>
              
            </ui:SettingsExpander>

            <!-- サンプルデータ生成セクション -->
            <ui:SettingsExpander Header="サンプルデータ生成"
                                 Description="アプリケーションのテストやデモ用にサンプルデータを生成します">
              
              <ui:SettingsExpanderItem Content="サンプルデータを生成"
                                       Description="アプリケーションのテストやデモ用にサンプルデータを生成します。">
                <ui:SettingsExpanderItem.Footer>
                  <Button Content="サンプルデータを生成"
                          Command="{Binding GenerateSampleDataCommand}"
                          IsEnabled="{Binding !IsLoading}"/>
                </ui:SettingsExpanderItem.Footer>
              </ui:SettingsExpanderItem>
              
            </ui:SettingsExpander>
            
          </StackPanel>
        </ScrollViewer>
      </Grid>

      <!-- 設定ボタン（画面右下、患者リスト画面でのみ表示） -->
      <Button Content="設定"
              Command="{Binding OpenSettingsCommand}"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              Margin="0,0,16,16"
              Padding="16,8"
              Classes="accent"
              FontSize="14"
              FontWeight="SemiBold"
              IsVisible="{Binding !ShowSettings}"/>

      <!-- Loading indicator -->
      <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
              Opacity="0.8"
              IsVisible="{Binding IsLoading}">
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Spacing="16">
          <ui:ProgressRing IsActive="{Binding IsLoading}" 
                           Width="48" 
                           Height="48"/>
          <TextBlock Text="データを読み込み中..." 
                     HorizontalAlignment="Center"
                     FontSize="16"/>
        </StackPanel>
      </Border>
    </Grid>
  </Grid>
</UserControl> 