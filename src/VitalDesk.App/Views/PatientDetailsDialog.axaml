<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:vm="using:VitalDesk.App.ViewModels"
        xmlns:views="using:VitalDesk.App.Views"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        x:Class="VitalDesk.App.Views.PatientDetailsDialog"
        x:DataType="vm:PatientDetailsViewModel"
        Title="{Binding Patient.Name}"
        Width="950"
        Height="600"
        MinHeight="500"
        MaxHeight="700"
        SizeToContent="Manual"
        WindowStartupLocation="CenterOwner">
    
    <ScrollViewer Margin="15" 
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  AllowAutoHide="True">
        <StackPanel Spacing="24">
            <!-- 患者基本情報 -->
            <ui:SettingsExpander Header="{Binding Patient.Name}"
                                IconSource="Contact"
                                IsExpanded="False">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" 
                      ColumnDefinitions="Auto,*,Auto,*" 
                      Margin="16">
                    <Grid.Styles>
                        <Style Selector="TextBlock.label">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Margin" Value="0,0,16,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="MinWidth" Value="80"/>
                        </Style>
                        <Style Selector="TextBlock.value">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="0,0,32,0"/>
                        </Style>
                    </Grid.Styles>

                     <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="患者名："/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Classes="value" Text="{Binding Patient.Name}"/>
                                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Classes="label" Text="フリガナ："/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Classes="value" Text="{Binding Patient.Furigana}"/>
                                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Classes="label" Text="生年月日："/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Classes="value" 
                               Text="{Binding Patient.BirthDate, StringFormat='{}{0:yyyy/MM/dd}'}"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Classes="label" Text="年齢："/>
                    <StackPanel Grid.Row="1" Grid.Column="3" Orientation="Horizontal" Spacing="2" Classes="value">
                        <TextBlock Text="{Binding PatientAgeNumber}"
                                   FontFamily="{StaticResource MonospaceFont}"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Margin="0,6.5,0,0"/>
                        <TextBlock Text="歳"
                                   FontFamily="{StaticResource JapaneseUIFont}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                
                    <TextBlock Grid.Row="2" Grid.Column="0" Classes="label" Text="国保："/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Classes="value" Text="{Binding Patient.NationalHealthInsurance}"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" Classes="label" Text="記号："/>
                    <TextBlock Grid.Row="2" Grid.Column="3" Classes="value" Text="{Binding Patient.Symbol}"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Classes="label" Text="番号："/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Classes="value" Text="{Binding Patient.Number}"/>

                    <TextBlock Grid.Row="3" Grid.Column="2" Classes="label" Text="保険者名："/>
                    <TextBlock Grid.Row="3" Grid.Column="3" Classes="value" 
                               Text="{Binding Patient.InsurerName}"/>
                    
                    <TextBlock Grid.Row="4" Grid.Column="0" Classes="label" Text="初診日："/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Classes="value" 
                               Text="{Binding Patient.FirstVisit, StringFormat='{}{0:yyyy/MM/dd}'}"/>
                    
                    <TextBlock Grid.Row="4" Grid.Column="2" Classes="label" Text="入院日："/>
                    <TextBlock Grid.Row="4" Grid.Column="3" Classes="value" 
                               Text="{Binding Patient.Admission, StringFormat='{}{0:yyyy/MM/dd}'}"/>
                    
                    <TextBlock Grid.Row="5" Grid.Column="0" Classes="label" Text="退院日："/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Classes="value" 
                               Text="{Binding Patient.Discharge, StringFormat='{}{0:yyyy/MM/dd}'}"/>
                </Grid>
            </ui:SettingsExpander>
            
            <!-- バイタルサイン推移 -->
            <StackPanel Spacing="16">
                <!-- 操作ボタン -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button Content="記録する" 
                            Command="{Binding AddVitalCommand}"
                            Classes="accent"
                            Width="100"
                            Background="Orange"/>
                    
                    <!-- 週間ナビゲーション -->
                    <Button Content="◀ 前の週"
                            Command="{Binding ChartsViewModel.GoToPreviousWeekCommand}"
                            IsEnabled="{Binding ChartsViewModel.CanGoToPrevious}"/>
                    
                    <TextBlock Text="{Binding ChartsViewModel.CurrentPeriodText}"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="16,0"/>
                    
                    <Button Content="次の週 ▶"
                            Command="{Binding ChartsViewModel.GoToNextWeekCommand}"
                            IsEnabled="{Binding ChartsViewModel.CanGoToNext}"/>
                    
                    <!-- <Button Content="テストデータ生成" 
                            Command="{Binding ChartsViewModel.GenerateTestDataCommand}"
                            Background="Orange"/> -->
                </StackPanel>
                
                <!-- 体温・脈拍グラフ -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16"
                        Height="450"
                        IsVisible="{Binding ChartsViewModel.NoDataMessage, Converter={x:Static StringConverters.IsNullOrEmpty}}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="体温・脈拍推移" 
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                        <lvc:CartesianChart Series="{Binding ChartsViewModel.CombinedSeries}"
                                           XAxes="{Binding ChartsViewModel.CombinedXAxes}"
                                           YAxes="{Binding ChartsViewModel.CombinedYAxes}"
                                           Height="400"
                                           IsHitTestVisible="False"/>
                    </StackPanel>
                </Border>
                
                <!-- データなしメッセージ -->
                <Border Background="{DynamicResource InfoBarInformationalSeverityBackgroundBrush}"
                        CornerRadius="4"
                        Padding="16"
                        IsVisible="{Binding ChartsViewModel.NoDataMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                        <ui:SymbolIcon Symbol="Important" 
                                       Foreground="{DynamicResource InfoBarInformationalSeverityIconForegroundBrush}"/>
                        <TextBlock Text="{Binding ChartsViewModel.NoDataMessage}"
                                   Foreground="{DynamicResource InfoBarInformationalSeverityTitleForegroundBrush}"/>
                    </StackPanel>
                </Border>
                
                <!-- バイタルサインデータ表 -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="バイタルサイン一覧" 
                                   FontWeight="SemiBold"
                                   FontSize="16"/>
                        <ScrollViewer MaxHeight="300">
                            <DataGrid ItemsSource="{Binding RecentVitals}"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      RowHeight="32">
                                <DataGrid.Styles>
                                    <!-- ヘッダースタイル：レイアウト最適化 -->
                                    <Style Selector="DataGridColumnHeader">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8,8"/>
                                        <Setter Property="Height" Value="40"/>
                                    </Style>
                                    <!-- セルスタイル -->
                                    <Style Selector="DataGridCell">
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8,6"/>
                                    </Style>
                                    <!-- データ部分の等幅フォント設定 -->
                                    <Style Selector="DataGridCell TextBlock">
                                        <Setter Property="FontFamily" Value="{StaticResource MonospaceFont}"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip.Tip" Value="{Binding $self.Text}"/>
                                    </Style>
                                </DataGrid.Styles>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="測定日時" 
                                                        Binding="{Binding MeasuredAt, StringFormat='{}{0:MM/dd HH:mm}'}"
                                                        Width="120"
                                                        FontFamily="Consolas, 'Courier New', monospace"/>
                                    <DataGridTextColumn Header="体温" 
                                                        Binding="{Binding Temperature, StringFormat='{}{0:F1}°C'}"
                                                        Width="90"
                                                        FontFamily="Consolas, 'Courier New', monospace"/>
                                    <DataGridTextColumn Header="脈拍" 
                                                        Binding="{Binding Pulse, StringFormat='{}{0}bpm'}"
                                                        Width="90"
                                                        FontFamily="Consolas, 'Courier New', monospace"/>
                                    <DataGridTextColumn Header="血圧" 
                                                        Width="110"
                                                        FontFamily="Consolas, 'Courier New', monospace">
                                        <DataGridTextColumn.Binding>
                                            <MultiBinding StringFormat="{}{0}/{1}mmHg">
                                                <Binding Path="Systolic"/>
                                                <Binding Path="Diastolic"/>
                                            </MultiBinding>
                                        </DataGridTextColumn.Binding>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="体重" 
                                                        Binding="{Binding Weight, StringFormat='{}{0:F1}kg'}"
                                                        Width="90"
                                                        FontFamily="Consolas, 'Courier New', monospace"/>
                                    <DataGridTextColumn Header="食事" 
                                                        Binding="{Binding MealSummary}"
                                                        Width="80"
                                                        FontFamily="Consolas, 'Courier New', monospace"/>
                                    <DataGridTextColumn Header="睡眠" 
                                                        Binding="{Binding Sleep, StringFormat='{}{0}h'}"
                                                        Width="70"
                                                        FontFamily="Consolas, 'Courier New', monospace"/>
                                    <DataGridTextColumn Header="便通" 
                                                        Binding="{Binding BowelMovement, StringFormat='{}{0}'}"
                                                        Width="70"
                                                        FontFamily="Consolas, 'Courier New', monospace"/>
                                    <DataGridTextColumn Header="備考" 
                                                        Binding="{Binding Note}"
                                                        Width="150"
                                                        FontFamily="Consolas, 'Courier New', monospace"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                        
                        <TextBlock Text="バイタルサインが記録されていません"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   IsVisible="{Binding !RecentVitals.Count}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- 閉じるボタン -->
            <Button Content="閉じる"
                    HorizontalAlignment="Center"
                    Margin="0,16,0,0"
                    Click="OnCloseClick"/>
        </StackPanel>
    </ScrollViewer>
</Window> 