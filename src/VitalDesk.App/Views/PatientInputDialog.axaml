<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:vm="using:VitalDesk.App.ViewModels"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
        x:Class="VitalDesk.App.Views.PatientInputDialog"
        x:DataType="vm:PatientInputViewModel"
        Title="患者情報"
        Width="450" Height="550"
        MinWidth="400" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        CanResize="True">

    <Design.DataContext>
        <vm:PatientInputViewModel/>
    </Design.DataContext>

    <ScrollViewer Padding="24">
        <StackPanel Spacing="16">
            
            <!-- Header -->
            <TextBlock Text="患者情報" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Margin="0,0,0,16"/>

            <!-- National Health Insurance -->
            <StackPanel Spacing="8">
                <TextBlock Text="国保 （必須）" FontWeight="SemiBold"/>
                <TextBox Text="{Binding NationalHealthInsurance}"
                         Watermark="国保番号を入力してください..."
                         IsEnabled="{Binding !IsEditMode}"/>
            </StackPanel>

            <!-- Symbol -->
            <StackPanel Spacing="8">
                <TextBlock Text="記号" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Symbol}"
                         Watermark="記号を入力してください..."/>
            </StackPanel>

            <!-- Number -->
            <StackPanel Spacing="8">
                <TextBlock Text="番号" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Number}"
                         Watermark="番号を入力してください..."/>
            </StackPanel>

            <!-- Insurer Name -->
            <StackPanel Spacing="8">
                <TextBlock Text="保険者名" FontWeight="SemiBold"/>
                <TextBox Text="{Binding InsurerName}"
                         Watermark="保険者名を入力してください..."/>
            </StackPanel>

            <!-- Patient Name -->
            <StackPanel Spacing="8">
                <TextBlock Text="患者名 （必須）" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Name}"
                         Watermark="患者名を入力してください..."/>
            </StackPanel>

            <!-- Furigana -->
            <StackPanel Spacing="8">
                <TextBlock Text="フリガナ （必須）" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Furigana}"
                         Watermark="フリガナを入力してください..."/>
            </StackPanel>

            <!-- Birth Date -->
            <StackPanel Spacing="8">
                <TextBlock Text="生年月日" FontWeight="SemiBold"/>
                <DatePicker SelectedDate="{Binding BirthDate}"
                            HorizontalAlignment="Stretch"/>
            </StackPanel>

            <!-- First Visit -->
            <StackPanel Spacing="8">
                <TextBlock Text="初診日" FontWeight="SemiBold"/>
                <DatePicker SelectedDate="{Binding FirstVisit}"
                            HorizontalAlignment="Stretch"/>
            </StackPanel>

            <!-- Admission -->
            <StackPanel Spacing="8">
                <TextBlock Text="入院日" FontWeight="SemiBold"/>
                <DatePicker SelectedDate="{Binding Admission}"
                            HorizontalAlignment="Stretch"/>
            </StackPanel>

            <!-- Discharge -->
            <StackPanel Spacing="8">
                <TextBlock Text="退院日" FontWeight="SemiBold"/>
                <DatePicker SelectedDate="{Binding Discharge}"
                            HorizontalAlignment="Stretch"/>
            </StackPanel>

            <!-- Validation Errors -->
            <Border Background="{DynamicResource SystemFillColorCriticalBackgroundBrush}"
                    CornerRadius="8"
                    Padding="12"
                    IsVisible="{Binding !IsValid}">
                <TextBlock Text="{Binding ValidationErrors}"
                           Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,24,0,0">
                
                <!-- Loading indicator -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            Spacing="8"
                            IsVisible="{Binding IsSaving}">
                    <ui:ProgressRing IsActive="{Binding IsSaving}" 
                                     Width="20" 
                                     Height="20"/>
                    <TextBlock Text="保存中..." 
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        Content="キャンセル"
                        Command="{Binding CancelCommand}"
                        Width="100"
                        Margin="0,0,8,0"
                        IsEnabled="{Binding !IsSaving}"/>

                <!-- Save Button -->
                <Button Grid.Column="2"
                        Content="保存"
                        Command="{Binding SaveCommand}"
                        Classes="accent"
                        Width="100"
                        IsEnabled="{Binding !IsSaving}"/>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Window> 